{
  "name": "create-vcluster",
  "version": "0.0.0",
  "private": true,
  "description": "GitHub Action to create a Loft VCluster",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "npm run package:main && npm run package:post",
    "package:main": "ncc build lib/main.js --source-map --license licenses.txt --out dist/main",
    "package:post": "ncc build lib/post.js --source-map --license licenses.txt --out dist/post",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/loft-sh/create-vcluster.git"
  },
  "keywords": [
    "actions",
    "loft",
    "vcluster"
  ],
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/io": "^1.1.3",
    "semver": "^7.6.3"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin-js": "^2.11.0",
    "@stylistic/eslint-plugin-ts": "^2.11.0",
    "@types/node": "^22.13.0",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.15.0",
    "eslint-plugin-github": "^5.1.2",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.4.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  }
}
